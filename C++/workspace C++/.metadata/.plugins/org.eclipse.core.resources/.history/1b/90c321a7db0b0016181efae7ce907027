#include <iostream>
using namespace std;

//declaration section
class Triangle
{
public:
	Triangle();
	void setDimensions();
	double calculateArea();
	double calcArea();

private:
	double sideOne;
	double sideTwo;
	double height;
	double base;
	double area;
	double parameter;
};

//implementation section
Triangle::Triangle()
{
	sideOneX  = 0.0;
	sideTwoX  = 0.0;
	heightX   = 0.0;
	baseX     = 0.0;
	area      = 0.0;
	perimeter = 0.0;
} // end of default constructor

void Triangle::setDimensions (double base, double height, double sideOne, double sideTwo)
{
	if (base > 0.0)
		baseX = base;
	else
		baseX = 0.0;

	if (height > 0.0)
		heightX = height;
	else
		heightX = 0.0;

	if (sideOne > 0.0)
		sideOneX = sideOne;
	else
		sideOneX = 0.0;

	if (sideTwo > 0.0)
		sideTwoX = sideTwo;
	else
		sideTwoX = 0.0;


}//end setDimensions method

double Triangle::calculateArea ()
{
	area = .5 * base * height;
	return area;
}//end calculateArea method

double Triangle::calculateParameter ()
{
	perimeter = base + side + side;
	return parameter;
} //end of calculatePerimeter method



