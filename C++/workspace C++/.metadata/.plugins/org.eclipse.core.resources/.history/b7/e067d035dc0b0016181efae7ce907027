// Calculate the area and perimeter of a triangle using an instantiated triangle object
//============================================================================

#include <iostream>
#include "Chap1516 Triangle.h"
using namespace std;

int main()
{
	//instantiate Triangle object
	Triangle shape;

	//declare variables
	double base = 0.0;
	double height = 0.0;
	double sideOne = 0.0;
	double sideTwo = 0.0;
	double area = 0.0;
	double perimeter = 0.0;

	// get measurements
	cout << "Base: " << endl;
	cin >> base;
	cout << "Height: " << endl;
	cin >> height;
	cout << "Side One Length: " << endl;
	cin >> sideOne;
	cout << "Side Two Length: " << endl;
	cin >> sideTwo;

	// assign measurements
	shape.setDimensions(base, height, sideOne, sideTwo);

	//calculate and display area
	area = shape.calculateArea();
	cout << "Area of triangle is " << area << endl;

	//calculate and display area
	area = shape.calculateParameter();
	cout << "Area of triangle is " << area << endl;

	return 0;
}
